@page "/admin"
@attribute [Authorize(Roles = $"{Roles.Admin}, { Roles.SuperAdmin }")]
@using Iwan.Shared.Dtos.Dashboard

<MudText Typo="Typo.h5" Color="Color.Primary" Class="mb-4">@Localize(LocalizeKeys.Dashboard)</MudText>
<MudGrid>
    <MudItem xs="12" sm="6" md="3">
        <MudPaper Class="d-flex flex-row pt-6 pb-4" Style="height:100px;">
            <MudIcon Icon="@Icons.Material.Filled.AttachMoney" Color="Color.Success" Class="mx-4" Style="width:54px; height:54px;"></MudIcon>
            <div>
                <MudText Typo="Typo.subtitle1" Class="mud-text-secondary mb-n1">@Localize(LocalizeKeys.TotalMuseumValue)</MudText>
                <MudText Typo="Typo.h5">@data.GeneralReportLine.TotalMuseumValue</MudText>
            </div>
        </MudPaper>
    </MudItem>

    <MudItem xs="12" sm="6" md="3">
        <MudPaper Class="d-flex flex-row pt-6 pb-4" Style="height:100px;">
            <MudIcon Icon="@Icons.Material.Filled.Category" Color="Color.Secondary" Class="mx-4" Style="width:54px; height:54px;"></MudIcon>
            <div>
                <MudText Typo="Typo.subtitle1" Class="mud-text-secondary mb-n1">@Localize(LocalizeKeys.CategorieCount)</MudText>
                <MudText Typo="Typo.h5">@data.CategoriesReportLine.Count</MudText>
            </div>
        </MudPaper>
    </MudItem>

    <MudItem xs="12" sm="6" md="3">
        <MudPaper Class="d-flex flex-row pt-6 pb-4" Style="height:100px;">
            <MudIcon Icon="@Icons.Material.Filled.ShoppingBag" Color="Color.Primary" Class="mx-4" Style="width:54px; height:54px;"></MudIcon>
            <div>
                <MudText Typo="Typo.subtitle1" Class="mud-text-secondary mb-n1">@Localize(LocalizeKeys.ProductsCount)</MudText>
                <MudText Typo="Typo.h5">@data.ProductsReportLine.Count</MudText>
            </div>
        </MudPaper>
    </MudItem>

    <MudItem xs="12" sm="6" md="3">
        <MudPaper Class="d-flex flex-row pt-6 pb-4" Style="height:100px;">
            <MudIcon Icon="@Icons.Material.Filled.People" Color="Color.Warning" Class="mx-4" Style="width:54px; height:54px;"></MudIcon>
            <div>
                <MudText Typo="Typo.subtitle1" Class="mud-text-secondary mb-n1">@Localize(LocalizeKeys.VendorsCount)</MudText>
                <MudText Typo="Typo.h5">@data.VendorsReportLine.Count</MudText>
            </div>
        </MudPaper>
    </MudItem>

    <MudItem xs="12" sm="12" md="6">
        <MudCard Style="height:100%;">
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">@Localize(LocalizeKeys.TopVendors)</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudDataGrid Items="@data.VendorsReportLine.TopVendors">
                    <Columns>
                        <Column T="ReportLineVendorDto" Field="Name" Title="@Localize(LocalizeKeys.Name)" />
                        <Column T="ReportLineVendorDto" Field="RelatedProductsCount" Title="@Localize(LocalizeKeys.ProductsCount)" />
                        <Column T="ReportLineVendorDto" Field="BenefitPercent" Title="@Localize(LocalizeKeys.BenefitPercent)" />
                    </Columns>
                </MudDataGrid>
            </MudCardContent>
        </MudCard>
    </MudItem>
</MudGrid>