@if (Image != null)
{
    <div style="width:200px; height:200px; position: relative" @onmouseenter="() => hovering = true"
     @onmouseleave="() => hovering = false">
        <img src="@Image.MobileImage.Url" alt="product image" width="200" height="200" />
        <MudOverlay Visible="hovering" LightBackground="true" Absolute="true">
            <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="MudBlazor.Color.Error" Disabled="deletingImage"
                       Variant="Variant.Text" OnClick="DeleteImageAsync">
            </MudIconButton>
        </MudOverlay>
    </div>
}
else
{
    <MudText @onmouseenter="() => hovering = true" @onmouseleave="() => hovering = false"
         Style="background-color: lightgray; width:200px; height:200px; position: relative"
         Class="d-flex align-center justify-content-center">
        <MudProgressCircular Indeterminate="true" Color="MudBlazor.Color.Primary" Size="Size.Medium" />
    </MudText>
}
