@using Iwan.Shared.Dtos.Accounts

<MudCard Elevation="0" Square="true" Class="@Class" Style="@Style">
    <MudCardHeader>
        <CardHeaderAvatar>
            <MudAvatar Image="images/user-avatar.jpg" />
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Typo="Typo.body2">@User.Name</MudText>
        </CardHeaderContent>
    </MudCardHeader>
</MudCard>

@code {
    [Parameter] public UserDto User { get; set; }
    [Parameter] public string Class { get; set; }
    [Parameter] public string Style { get; set; }
}